{% extends 'base.html.twig' %}
{% block title %}Quizz | Inscription{% endblock %}

{% block body %}

    <style>
        body {
            font-family: 'Inter', sans-serif;
            overflow-y: hidden;
        }
        #row {
            height: 100vh;
            display: flex;
            flex-direction: row;
            align-content: center;
            justify-content: center;
            align-items: center;
            margin: 0;
        }
        form {
            background-color: #654321;
            border-radius: 10px;
            text-align: center;
            padding: 3% 2%;
            padding-bottom: 1%;
            display: flex;
            flex-direction: column;
            align-items:center;
        }
        h1 {
            font-weight: lighter;
            margin-bottom: 20px;
        }
        input {
            background-color: rgba(0,0,0,0);
            border: none;
            border-bottom: 1px solid black;
            margin-bottom: 10px;
            margin-top: 5px;
            padding-bottom: 2px;
            padding-left: 8px;
        }
        form div {
            display: flex;
            align-items: center;
        }
        label {
            font-size: 10px;
            padding-right: 8px;
            padding-bottom: 5px;
        }
        button {
            margin-top: 12px;
            border-radius: 5px;
            border: none;
            padding: 3px 8px;
        }
        span {
            font-size: 10px;
            margin-top: 10px;
        }
        span a {
            margin: 0;
            color: white;
        }
        span a:hover {
            text-decoration: underline;
        }

        input::placeholder{
            color: #dadada;
        }

        input{
            color: #dadada;
        }

        input:focus {
            outline:  none;
        }
    </style>

    <div id="row">
    {{ form_start(registrationForm) }}
        <h1>Inscrivez-vous</h1>
        {{ form_widget(registrationForm.email) }}
        {{ form_widget(registrationForm.pseudo) }}
        {{ form_widget(registrationForm.plainPassword.first) }}
        {{ form_widget(registrationForm.plainPassword.second) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'inscrire</button>
        <span>Déjà membre ? <a href="/login">Se connecter</a></span>
    {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}