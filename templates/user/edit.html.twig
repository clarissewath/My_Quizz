{% extends 'base.html.twig' %}

{% block body %}
<script src="https://kit.fontawesome.com/cb0b768da2.js" crossorigin="anonymous"></script>
<style>
	body {
		font-family: 'Inter', sans-serif;
		overflow-y: hidden;
	}
	#row {
		background-color: #3A4D58;
		height: 95vh;
		display: flex;
		flex-direction: row;
		align-content: center;
		justify-content: center;
		align-items: center;
		margin: 0;
	}
	#block {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 35%;
		background-color: #C4C4C4;
		padding: 5% 0;
		border-radius: 20px;
		position: relative;
	}
    #close a {
		font-size: 30px;
		position: absolute;
		top: 15px;
		right: 0px;
		color: #001F31;
	}
	#close a:hover {
		transform: rotate(90deg);
		transition: all 0.2s;
	}
    h2 {
        margin-bottom: 20px;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    input {
        background-color: rgba(0,0,0,0);
        border: none;
        border-bottom: 1px solid black;
        margin-bottom: 10px;
        margin-top: 5px;
        padding-bottom: 2px;
        padding-left: 8px;
    }
    input:focus {
        outline:  none;
    }
    button {
        margin-top: 12px;
        border-radius: 5px;
        border: none;
        padding: 3px 8px;
    }
</style>
<div id="row">
	<div id="block">
        <div id="close">
			<a href="{{ path('app_user') }}"><i class="fa-solid fa-xmark"></i></a>
		</div>
		<h2>Editer mon profil</h2>
		{{ form_start(form) }}
        {{ form_widget(form.email) }}
        {{ form_widget(form.pseudo) }}
        {{ form_widget(form.password) }}
		{{ form_rest(form) }}
        <button class="btn btn-primary">Sauvegarder</button>
		{{ form_end(form) }}
	</div>
</div>

{% endblock %}
