{% extends 'base.html.twig' %}
{% block title %}Créer mon quiz{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
	<div>
		{{message}}
	</div>
{% endfor %}

<style>
    body {
		font-family: 'Inter', sans-serif;
		overflow-y: hidden;
	}
	#row {
		background-color: #3A4D58;
		height: 95vh;
		display: flex;
		flex-direction: row;
		align-content: center;
		justify-content: center;
		align-items: center;
		margin: 0;
	}
	#block {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 55%;
		background-color: #C4C4C4;
		border-radius: 20px;
		position: relative;
		padding-bottom: 3%;
	}
</style>

<div id="row">
    <div id="block">
        <h1>Créer mon quiz</h1>
		{{ form_start(formQ) }}
		{{ form_widget(formQ) }}
		{{ form_widget(formC) }}
        <button class="btn btn-primary">Créer</button> 
		{{ form_end(formQ) }}
    </div>
</div>
{% endblock %}
