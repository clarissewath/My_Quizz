<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Inter&display=swap');

            * {
                margin: 0;
                padding: 0;

            }

            body {
                background-color: #cacaca;
            }

            .navbar {
                background-color: #001F31;
                display: flex;
                font-family: 'Inter', sans-serif;
                justify-content: space-between;
            }

            .nav {
                padding: 0;
                margin: 0.8em;
                margin-right: 25%
            }

            .nav li {
                display: inline;
                list-style: none;
            }

            .nav a,
            a {
                display: inline-block;
                margin: 0 30px;
                text-decoration: none;
                color: white;
            }

            p {
                color: white;
                display: flex;
                flex-direction: column;
                justify-content: center;
                margin-left: 3em;
                font-size: 20px;
            }

            .nav a:hover{
                color: #00B4D8;
            }

            .left:hover{
                color: red;
            }

            .left{
                display: flex;
                flex-direction: column;
                justify-content: center;
            }
        </style>

        <div class='navbar'>
            <p><a href='/'>Quizz</a></p>
            <ul class='nav'>
                <li>
                    <a href="/">Catégories</a>
                    {% if app.user %}
                        <a href="/create" class='create'>Créer mon quizz</a>
                        <a href="{{ path('app_user') }}" class="left">Profil</a>
                    {% endif %}
                </li>
            </ul>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="/admin" class="left">Administration</a>
                    {% endif %}
                    {% if app.user %}
                            <a href="{{ path('app_logout') }}" class="left">Se déconnecter</a>
                            {% else %}
                            <a href="/login" class="left">Me connecter</a>
                            <a href="/register" class="left">M'inscrire</a>
                    {% endif %}
                
        </div>
        {% block body %}       
        {% endblock %}
    </body>
</html>
